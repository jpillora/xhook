{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES6",
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "strict": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
